@using PagedList;
@using PagedList.Mvc;

@model IPagedList<JBOFarmersMkt.Sale>



@{
    ViewBag.Title = "Sales";
}

@helper Truncate(string input, int length)
{
    if (input.Length <= length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text>...</text>
    }
}

@helper TruncateDate(string input, int length)
{
    if (input.Length <= length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)
    }
}

<section class="sales">
    <div class="row">
        <header class="col-xs-12 page-header">
            <h2>Sales</h2>
        </header>
    </div>
    <div class="row">
        <div class="col-xs-12">
            @if (Model != null)
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>
                                Code
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Product
                            </th>
                            <th class="text-right">
                                Quantity
                            </th>
                            <th class="text-right">
                                Total
                            </th>
                            <th>
                                Supplier
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.transCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.description)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.quantity)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.total)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.supplier)
                                </td>
                                <td class="text-center">
                                    @Html.ActionLink("Details", "Details", new { id = item.saleId }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            }
            else
            {
                <p>There are no items to display</p>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 text-center">
            @if (Model != null)
            {
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            }
        </div>
    </div>
</section>








