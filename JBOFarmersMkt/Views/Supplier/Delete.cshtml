@model JBOFarmersMkt.Models.Supplier

@{
    ViewBag.Title = "Delete";
}

<section class="deleteSupplier">
    <div class="row">
        <header class="col-xs-12 page-header">
            <h1>@ViewBag.Title <small>Removing a supplier</small></h1>
        </header>
    </div>

    <div class="row">
        <div class="col-xs-12 alert alert-box alert-danger">Warning: This action is permanent. Proceed with caution.</div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.name, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-4">
                        <p class="form-control-static">
                            @Html.DisplayFor(model => model.name)
                        </p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.address, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-4">
                        <p class="form-control-static">
                            @Html.DisplayFor(model => model.address)
                        </p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.city, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-4">
                        <p class="form-control-static">
                            @Html.DisplayFor(model => model.city)
                        </p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.state, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-4">
                        <p class="form-control-static">
                            @Html.DisplayFor(model => model.state)
                        </p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.phone, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-4">
                        <p class="form-control-static">
                            @Html.DisplayFor(model => model.phone)
                        </p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.email, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-4">
                        <p class="form-control-static">
                            @Html.DisplayFor(model => model.email)
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            }
        </div>
    </div>
</section>
